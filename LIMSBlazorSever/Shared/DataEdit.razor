<h2>@PageTitle</h2>
@if ("Edit" != FormType)
{
    <div class="alert alert-danger" role="alert">
        @DeleteWarning
    </div>
}

@if (UrlAdd != null && UrlAddText != null)
{
    <button href="@UrlAdd" class="btn btn-secondary">@UrlAddText</button>
}
<hr>
<EditForm Model="@Model" OnValidSubmit="@OnValidSubmit">

    @ChildContent

    <br>

    @if ("Edit" == FormType)
    {
        <button type="submit" class="btn btn-primary">@BtnSaveText</button>
    }
    else
    {
        <button type="button" class="btn btn-primary" @onclick="@(OnClickDelete)">Удалить</button>
    }
    &nbsp;
    &nbsp;
    <button type="button" class="btn btn-secondary" @onclick="@OnClickCancel">Отменить</button>

</EditForm>

@code {

    [Parameter]
    public string PageTitle { get; set; }
    [Parameter]
    public string UrlAdd { get; set; }
    [Parameter]
    public string UrlAddText { get; set; }
    [Parameter]
    public string BtnSaveText { get; set; }
    [Parameter]
    public object Model { get; set; }
    [Parameter]
    public string FormType { get; set; } = "Edit";
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public EventCallback<EditContext> OnValidSubmit { get; set; }
    [Parameter]
    public EventCallback OnClickCancel { get; set; }
    [Parameter]
    public EventCallback OnClickDelete { get; set; }
    [Parameter]
    public string DeleteWarning { get; set; }


}

