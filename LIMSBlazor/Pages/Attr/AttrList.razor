@using LIMSBlazor.Data
@page "/attrlist"
@inject IAttrService AttrService

<DataView PageTitle="Список аттрибутов" UrlAdd="/attraddedit"UrlAddText="Добавить новый аттрибут">
    <Header>
        <tr>
            <td style="text-align:center">#</td>
            <td>Id</td>
            <td>Наименование</td>
            <td>Описание</td>
        </tr>
    </Header>
    <Rows>
        @if (attrs == null)
        {
            <p style="text-align:center">
                <img src="../images/loader.gif" width="50" height="50" />
            </p>
        }
        else
        {
            @foreach (var attr in attrs)
            {
                <tr>
                    <td style="text-align:center">
                        <a href="attraddedit/@attr.Id">
                            <img src="../images/iEdit.png" width="20" height="20" />
                        </a>
                        <a href="attrdelete/@attr.Id">
                            <img src="../images/iTrash.png" alt="Delete" title="Delete" width="20" height="20" />
                        </a>
                    </td>
                    <td>@attr.Id</td>
                    <td>@attr.Name</td>
                    <td>@attr.Description</td>
                </tr>
            }
        }
    </Rows>
</DataView>

@code {
    IEnumerable<Attr> attrs;
    protected override async Task OnInitializedAsync()
    {
        attrs = await AttrService.AttrList();
    }
}
