@using LIMSBlazor.Data
@page "/categorylist"
@inject ICategoryService CategoryService

<DataView PageTitle="Список категорий аналитических сервисов" UrlAdd="/categoryaddedit" UrlAddText="Добавить новую категорию аналитических сервисов">
    <Header>
        <tr>
            <td style="text-align:center">#</td>
            <td>Id</td>
            <td>Наименование</td>
            <td>Описание</td>
        </tr>
    </Header>
    <Rows>
        @if (categorys == null)
        {
            <p style="text-align:center">
                <img src="../images/loader.gif" width="50" height="50" />
            </p>
        }
        else
        {
            @foreach (var category in categorys)
            {
                <tr>
                    <td style="text-align:center">
                        <a href="categoryaddedit/@category.Id">
                            <img src="../images/iEdit.png" width="20" height="20" />
                        </a>
                        &nbsp
                        <a href="categorydelete/@category.Id">
                            <img src="../images/iTrash.png" alt="Delete" title="Delete" width="20" height="20" />
                        </a>
                    </td>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                </tr>
            }
        }
    </Rows>
</DataView>

@code {
    IEnumerable<Category> categorys;
    protected override async Task OnInitializedAsync()
    {
        categorys = await CategoryService.CategoryList();
    }
}
